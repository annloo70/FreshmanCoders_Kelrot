#include<iostream>
using namespace std;
int main(){
 int n, x[100][100],t1=0,t2=0;
    cin>>n;
     for(int a=0; a<n;a++){
        for(int b=0; b<n; b++){
            cin>>x[a][b];
            if(a==b){
                t1+=x[a][b];}
            if(a+b==n-1){
                t2+=x[a][b];
                        }
                          }
                              }
    cout<<abs(t1-t2)<<endl;
    return 0;
}
